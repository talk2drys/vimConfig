{
    "languageserver": {
       "dart": {
            "command": "dart",
            "args": ["/opt/dart-sdk/bin/snapshots/analysis_server.dart.snapshot", "--lsp"],
            "filetypes": ["dart"],
            "disableDynamicRegister": true,
            "trace.server": "verbose"
        }
    },
    "flutter.lsp.debug": true,
    "flutter.sdk.dart-lookup": "dart",
    "flutter.sdk.flutter-lookup": "flutter",
    "flutter.lsp.initialization.closingLabels": true,
    "clangd.enabled": true,
    "clangd.semanticHighlighting": true,

    "explorer.width": 30,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.keyMappings.global": {
        "<cr>": ["expandable?", "expand", "open"],
        "v": "open:vsplit"
    }
}

